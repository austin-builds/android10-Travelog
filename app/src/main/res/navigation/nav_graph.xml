<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/guideFragment">

    <fragment
        android:id="@+id/guideFragment"
        android:name="com.thequietz.travelog.guide.view.GuideFragment"
        android:label="GuideFragment"
        tools:layout="@layout/fragment_guide">
        <action
            android:id="@+id/action_guideFragment_to_specificGuideFragment"
            app:destination="@id/specificGuideFragment" />
    </fragment>
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.thequietz.travelog.schedule.view.ScheduleFragment"
        android:label="ScheduleFragment"
        tools:layout="@layout/fragment_schedule">
        <action
            android:id="@+id/action_scheduleFragment_to_schedulePlaceFragment"
            app:destination="@id/schedulePlaceFragment" />
    </fragment>
    <fragment
        android:id="@+id/recordFragment"
        android:name="com.thequietz.travelog.record.RecordFragment"
        android:label="RecordFragment"
        tools:layout="@layout/fragment_record" />
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.thequietz.travelog.menu.MenuFragment"
        android:label="MenuFragment"
        tools:layout="@layout/fragment_menu" />
    <fragment
        android:id="@+id/schedulePlaceFragment"
        android:name="com.thequietz.travelog.schedule.view.SchedulePlaceFragment"
        android:label="SchedulePlaceFragment">
        <action
            android:id="@+id/action_schedulePlaceFragment_to_scheduleSelectFragment"
            app:destination="@id/scheduleSelectFragment" />
    </fragment>
    <fragment
        android:id="@+id/scheduleSelectFragment"
        android:name="com.thequietz.travelog.schedule.view.ScheduleSelectFragment"
        android:label="ScheduleSelectFragment">
        <argument
            android:name="PlaceString"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/specificGuideFragment"
        android:name="com.thequietz.travelog.guide.SpecificGuideFragment"
        android:label="SpecificGuideFragment">
        <argument
            android:name="item"
            app:argType="string" />
        <action
            android:id="@+id/action_specificGuideFragment_to_otherInfoFragment"
            app:destination="@id/otherInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/otherInfoFragment"
        android:name="com.thequietz.travelog.guide.OtherInfoFragment"
        android:label="OtherInfoFragment">
        <argument
            android:name="item"
            app:argType="com.thequietz.travelog.guide.Place" />
        <action
            android:id="@+id/action_otherInfoFragment_to_specificGuideFragment"
            app:destination="@id/specificGuideFragment"
            app:popUpTo="@id/specificGuideFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/recordViewManyFragment"
        android:name="com.thequietz.travelog.record.RecordViewManyFragment"
        android:label="RecordViewManyFragment" />
    <fragment
        android:id="@+id/recordViewOneFragment"
        android:name="com.thequietz.travelog.record.RecordViewOneFragment"
        android:label="RecordViewOneFragment" >
        <action
            android:id="@+id/action_recordViewOneFragment_to_recordViewManyFragment"
            app:destination="@id/recordViewManyFragment" />
    </fragment>
</navigation>