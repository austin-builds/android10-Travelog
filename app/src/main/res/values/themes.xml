<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Travelog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_travelog</item>
        <item name="colorPrimaryVariant">@color/blue_travelog</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_travelog</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Custom Font Style. -->
        <item name="fontFamily">@font/noto_font_family</item>
        <item name="editTextStyle">@style/customEditText</item>
        <item name="android:textViewStyle">@style/customTextView</item>
        <item name="android:buttonStyle">@style/customButton</item>
    </style>
</resources>
