<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.thequietz.travelog.schedule.viewmodel.ScheduleDetailViewModel" />
        <variable
            name="item"
            type="com.thequietz.travelog.schedule.data.ScheduleDetailItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:id="@+id/view_line"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/gray"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_place"/>

        <View
            android:id="@+id/view_circle"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/shape_circle"
            android:layout_marginStart="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bt_tv_place"
            android:text="@{item.name}"
            android:gravity="center_vertical"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="37dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:paddingStart="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_delete"
            android:layout_marginEnd="10dp"
            android:onClick="@{()->viewModel.deleteSchedule(item.id)}"
            app:layout_constraintTop_toTopOf="@id/tv_place"
            app:layout_constraintBottom_toBottomOf="@id/tv_place"
            app:layout_constraintRight_toRightOf="@id/tv_place"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>