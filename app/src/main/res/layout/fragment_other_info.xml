<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.thequietz.travelog.guide.OtherViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".guide.OtherInfoFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_other_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tb_other_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb_other_info"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/btn_make_plan"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="380dp"
            android:layout_height="290dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_make_plan"
            android:layout_marginTop="25dp"
            android:id="@+id/iv_other_info_main"
            app:setImage="@{viewModel.currentPlace.url}"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="경주"
            android:text="@{viewModel.currentPlace.name}"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/iv_other_info_main"
            app:layout_constraintTop_toTopOf="@id/iv_other_info_main"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/tv_other_info_main_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="관광지"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_other_info_main"
            android:layout_marginTop="25dp"
            android:id="@+id/tv_vacation_spot"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_vacation_spot_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_other_info_main"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:textColor="#532F95"
            android:textStyle="bold"
            android:id="@+id/tv_vacation_spot_more"
            android:clickable="true"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_vacation_spot"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:orientation="vertical"
            android:id="@+id/rv_vacation_spot"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="먹거리"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_vacation_spot"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:id="@+id/tv_food"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_food_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_vacation_spot"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:textColor="#532F95"
            android:textStyle="bold"
            android:id="@+id/tv_food_more"
            android:clickable="true"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_food"
            android:id="@+id/rv_food"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:orientation="vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="행사/공연/축제"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_food"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:id="@+id/tv_fesetival"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_festival_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_food"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:textColor="#532F95"
            android:textStyle="bold"
            android:id="@+id/tv_festival_more"
            android:clickable="true"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_fesetival"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:orientation="vertical"
            android:id="@+id/rv_festival"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>